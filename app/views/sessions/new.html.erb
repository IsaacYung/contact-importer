<div class="container form-style">
    <h1 class="h1">Sign-in</h1>
    <%= form_for :session, html: { class: 'row' },  url: sign_in_path do |f| %>
    <div class="col-lg-6 row">
        <div class="col-lg-6 field input-group input-group-sm mb-3">
            <%= f.label :email, class: "input-group-text" %><br />
            <%= f.email_field :email, class: "form-control", autofocus: true %>
        </div>

        <div class="col-lg-6 field input-group input-group-sm mb-3">
            <%= f.label :password, class: "input-group-text" %><br />
            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
        </div>
        <div class="actions col-lg-6 field input-group input-group-sm mb-3">
            <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
        <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
        <% end %>
    </div>
</div>
</div>