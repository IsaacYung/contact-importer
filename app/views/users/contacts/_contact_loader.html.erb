<div class="row">
    <%= form_tag(users_contacts_upload_path, multipart: true,  html: { class: 'col-lg-12 row' }) do %>
        <div class="field input-group input-group-sm mb-3">
            <%= label_tag "Load Contacts", nil, class: "input-group-text" %>
            <%= file_field_tag :csv_file, class: "form-control" %>
        </div>
        <div class="actions input-group input-group-sm mb-3">
            <%= submit_tag "Load", class: "btn btn-primary" %>
        </div>
    <% end %>
</div>